<!-- This whole document is an ejs file, which will be processed and then returned to the client as HTML -->
<!DOCTYPE html>                             <!-- tells the browser that this is an HTML document -->
<html lang="en">                            <!-- lanugage is english -->
<head>                                      <!-- the head section is where metadata, title, links, and related stuff goes -->
    <meta charset="UTF-8">                  <!-- says that we're using UTF-8 character encoding  -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">                   <!-- describes compatibility with Internet Explorer -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  <!-- sets viewport scale for maximium compatibility with mobile devices when using viewport related properties-->
    <title>Document</title>                                                 <!-- Title of the page, which will show in the browser-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">   <!-- link the font-awesome css bits we'll need for icons -->
    <link rel="stylesheet" href="css/style.css">                        <!-- link the css stylesheet -->
</head>                                                                 <!-- end head section -->
