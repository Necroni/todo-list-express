<body>                                                                  <!-- main section for displayed content -->
    <h1>Todo List: </h1>                                                <!-- main heading for the page -->
    <ul class="todoItems">                                              <!-- the start of an unordered list (bullet-style), with the "todoItems" class (see CSS) -->
    <% for(let i=0; i < items.length; i++) {%>                          <!-- EJS for loop that runs over the length of the "todos" array (see JS) -->
        <li class="item">                                               <!-- loop adds a list item with the "item" class -->
            <% if(items[i].completed === true) {%>                      <!-- if the item's "completed" property is true, do the following (more EJS) -->
                <span class='completed'><%= items[i].thing %></span>    <!-- add that item to a span with class "completed" -->
            <% }else{ %>                                                <!-- otherwise (item not marked as completed), do the following: -->
                <span><%= items[i].thing %></span>                      <!-- add that item to a span with no class (again, using EJS for the name of the thing)-->
            <% } %>                                                     <!-- end of the if/else conditional-->
            <span class='fa fa-trash'></span>                           <!-- add a span with the font-awesome class of 'fa-trash' (it's a trashcan icon)-->
        </li>                                                           <!-- closes the list item element -->
    <% } %>                                                             <!-- end of the EJS "for" loop -->
    </ul>                                                               <!-- closes the unordered list -->

    <h2>Left to do: <%= left %></h2>                                    <!-- Level 2 heading, including a dab of EJS that pulls in # of todo-list items that are incomplete -->

    <h2>Add A Todo:</h2>                                                <!-- Level 2 heading -->

    <form action="/addTodo" method="POST">                              <!-- creates a form that uses the POST method to operate on the /addTodo route (action) -->
        <input type="text" placeholder="Thing To Do" name="todoItem">   <!-- Text input with "Thing To Do" as default. Name of that input is "todoItem" (important!) -->
        <input type="submit">                                           <!-- Submit button -->
    </form>                                                             <!-- close the form element -->
    

    <script src='js/main.js'></script>                                  <!-- runs the main.js script (last thing so as to avoid BLINK issues)-->
</body>                                                                 <!-- close the body (the visible parts of the page)-->
</html>                                                                 <!-- close the HTML -->
